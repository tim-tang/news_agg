/*
 define funtion to exec when scroll to page bottom
 Param:
 data(Number) -1:一直翻页; 0:不翻页; n:翻n页
 fn(Function) 当滚动条拖到底部时要执行的函数
 */
var ie = -1;

jQuery.extend({
    scrollPage:function(p, f){
        var n = c = t = h = new Number;
        $(function(){
            $(window).scroll( function(e){
                if (n == p) { $(this).unbind("scroll"); }
                c = document.documentElement.clientHeight;
                t = $(document).scrollTop();
                h = $(document).height();
                if ( h - t - c == 0 ){
                    f();
                    if ( p > 0 ) n += 1;
                }
            });
        });
    }
});

var reentry = false;
$.scrollPage(-1, function(){
    startLoadMore();
});

function startLoadMore() {
    if (!reentry) {
        $('#loading_more').show();
        loadMore();
    }
}

function loadMore() {
reentry = true;
    var lastItemID = $('.hidden-id:last').text();
    var scrollPos = $(document).scrollTop();
    var catStr = '';
    if (cat > 0)
        catStr = "/" + cat;

    $.ajax({
        url: "/post/index/" + lastItemID,
        dataType: "html",
        type: "GET",
        success: function (data) {
            if (data === undefined || data === null || data === "") {
                //display warning
            } else {
                $('#news-view').append(data);
                $('#loading_more').hide();
                hookUpMouseEvent();

                $('.news-item').map(function() {
                    var node = this;
                    var id = parseInt($('.hidden-id', node).text());
                    var lastId = parseInt(lastItemID);
                    if (id < lastId) {
                        var url = $('.hidden-url', node).text();
                        $('#invisible_preview').load("/content" + url);
                    }
                });
                updateDate();
            }
        },
        complete: function (data) {
            if (ie >= 7 && ie < 9) {
                window.setTimeout(function() {
                    $(document).scrollTop(scrollPos);
                    reentry = false;
                }, 10);
            } else {
                reentry = false;
            }
        }
    });
}

function hookUpMouseEvent() {
    $('.news-item').mouseenter(function() {
        this.style.backgroundColor='#FDFFBF';
        this.style.border='solid 1px #ddd';
        $('.action-digg', this).css("color", '#77D3ED');
        var node = this;
    });

    $('.news-item').mouseleave(function() {
        this.style.backgroundColor='#fff';
        this.style.border='solid 1px #fff';
        $('.action-digg', this).css("color", '#CCC');
    });
}
